// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // binaryTargets é necessário para funcionar no Linux (Docker) e no seu SO local (Windows/Mac)
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Models ---

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String?
  pushToken String?    @map("push_token") // Token do Expo para notificações
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  
  reminders Reminder[]

  @@map("users")
}

model Reminder {
  id           String   @id @default(uuid())
  title        String
  description  String?
  scheduledFor DateTime @map("scheduled_for") // Data/Hora ISO exata da notificação
  isSent       Boolean  @default(false) @map("is_sent") // Controle de status
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  @@index([scheduledFor]) // Índice para buscar rapidamente jobs pendentes
  @@map("reminders")
}